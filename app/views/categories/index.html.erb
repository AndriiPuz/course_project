<p style="color: green"><%= notice %></p>

<h1 class="text-center">Категорії витрат / доходів</h1>

<div class="container" style="background: rgb(246, 243, 243); margin-top: 10px; border-radius: 10px">
  <%= form_tag(categories_path, :method => 'get' ) do %>
  <%= text_field_tag(:search, params[:search], class:"search_category", placeholder: "Фільтр по категоріях") %>
  <%= submit_tag (" Пошук "), class:"submit_search_category" %>
  <% end %>
  <table class= "table table-striped table-bordered mt-3">
    <thead>
      <tr>
        <th class="col-1">#</th>
        <th class="col-4">Назва</th>
        <th class="col-6">Опис</th>
        <th class="col-1">Управління</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |categories| %>
        <tr>
          <td>
            <%= categories.id%>
          </td>
          <td>
            <%= categories.name %>
          </td>
          <td>
            <%= link_to categories.description, categories, class:"description_category"%>
          </td>
          <td>
            <%= link_to edit_category_path(categories), class:"link_pencil" do %>
              <i class="bi bi-pencil-square icon_pencil"></i>
            <% end %>
            <%= button_to categories, class:"button_square", method: :delete do %>
              <i class="bi bi-x-square icon_square"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="ms-3 mt-3">
    <%= link_to "Додати нову категорію", new_category_path, class: "btn btn-primary ms-5" %>
</div>

