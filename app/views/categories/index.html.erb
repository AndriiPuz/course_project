<p style="color: green"><%= notice %></p>

<h1 class="text-center">Категорії витрат/доходів</h1>

<div class="container" style="background: rgb(246, 243, 243); margin-top: 15px; border-radius: 10px">
  <table class= "table table-striped table-bordered mt-4">
    <thead>
      <tr>
        <th class="col-1">#</th>
        <th class="col-4">Назва</th>
        <th class="col-6">Опис</th>
        <th class="col-1">Управління</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |categories| %>
        <tr>
          <td>
            <%= categories.id%>
          </td>
          <td>
            <%= categories.name %>
          </td>
          <td>
            <%= link_to categories.description, categories %>
          </td>
          <td>
            <%= link_to edit_category_path(categories) do %>
              <i class="bi bi-pencil-square"></i>
            <% end %>
            <%= button_to categories, method: :delete do %>
              <i class="bi bi-x-square"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="ms-5 mt-3">
    <%= link_to "Додати нову категорію", new_category_path, class: "btn btn-primary ms-3" %>
</div>

