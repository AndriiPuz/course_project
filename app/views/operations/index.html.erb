<p style="color: green"><%= notice %></p>

<h1 class="text-center">Транзакції</h1>


<div class="container" style="background: rgb(246, 243, 243); margin-top: 15px; border-radius: 10px">
  <table class= "table table-striped table-bordered mt-4">
    <thead>
      <tr>
        <th>#</th>
        <th>Категорія</th>
        <th>Тип операції</th>
        <th>Сума</th>
        <th>Дата</th>
        <th>Опис</th>
        <th>Управління</th>
      </tr>
    </thead>
    <tbody>
      <% @operations.each do |operation| %>
        <tr>
          <td>
            <%= operation.id%>
          </td>
          <td>
            <%= operation.category.name %>
          </td>
          <td>
            <%= operation.otype %>
          </td>
          <td>
            <%= operation.amount %>
          </td>
          <td>
            <%= operation.odate %>
          </td>
          <td>
            <%= link_to operation.description, operation %>
          </td>
          <td>
            <%= link_to edit_operation_path(operation) do %>
              <i class="bi bi-pencil-square"></i>
            <% end %>
            <%= button_to operation, method: :delete do %>
              <i class="bi bi-x-square"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="ms-5 mt-3">
    <%= link_to "Додати нову транзакцію", new_operation_path, class: "btn btn-primary ms-3" %>
</div>

